@model MigrantControlSystem.Models.Migrant

@{
    ViewData["Title"] = "Create";
}

<h1>Kreiranje</h1>

<h4>Migrant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ime" class="control-label"></label>
                <input asp-for="ime" class="form-control" />
                <span asp-validation-for="ime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="prezime" class="control-label"></label>
                <input asp-for="prezime" class="form-control" />
                <span asp-validation-for="prezime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="drzavaPorijekla" class="control-label"></label>
                <input asp-for="drzavaPorijekla" class="form-control" />
                <span asp-validation-for="drzavaPorijekla" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="datumRegistracije" class="control-label"></label>
                <input asp-for="datumRegistracije" class="form-control" />
                <span asp-validation-for="datumRegistracije" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
