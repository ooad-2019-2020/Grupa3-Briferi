@model IEnumerable<MigrantControlSystem.Models.MCOtvoreniTip>

@{
    ViewData["Title"] = "Index";
}

<h1>Migrantski centri otvorenog tipa</h1>

<p>
    <a asp-action="Create">Dodaj novi centar</a> |
    <a asp-controller="MigrantskiCentar" asp-action="Index">Nazad na listu svih migrantskih centara</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kapacitet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojRegistrovanih)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kapacitet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brojRegistrovanih)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
