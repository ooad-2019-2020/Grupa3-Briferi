@model MigrantControlSystem.Models.MCOtvoreniTip

@{
    ViewData["Title"] = "Edit";
}

<h1>Uredi</h1>

<h4>Migrantski centar zatvorenog tipa</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="naziv" class="control-label"></label>
                <input asp-for="naziv" class="form-control" />
                <span asp-validation-for="naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="kapacitet" class="control-label"></label>
                <input asp-for="kapacitet" class="form-control" />
                <span asp-validation-for="kapacitet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="brojRegistrovanih" class="control-label"></label>
                <input asp-for="brojRegistrovanih" class="form-control" />
                <span asp-validation-for="brojRegistrovanih" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <input type="submit" value="Spasi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Nazad na listu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
